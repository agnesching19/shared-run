<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true %>
      <%= f.input :last_name, required: true, autofocus: true %>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :sociability, collection: 1..5, prompt: "0" %>
      <%= f.input :pace, hint: "Average pace per kilometer?" %>
      <%= f.input :bio, hint: "We are curious about your story!" %>
      <%= f.input :location, hint: "Postcode, city..." %>

      <%= f.input :strava, hint: "Your strava account." %>
      <%= f.input :nike, hint: "Your Nike+ Run account." %>

      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it.", required: false %>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :current_password, hint: "Please confirm your changes by inputting your current password.", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
      <%= link_to "Cancel", :back, class: "btn btn-default" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
