<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true %>
      <%= f.input :last_name, required: true, autofocus: true %>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :sociability, collection: 1..5, prompt: "0" %>
      <%= f.input :pace, placeholder: "What is your average pace per kilometre?" %>
      <%= f.input :bio, placeholder: "We are curious about your story!" %>
      <%= f.input :location, placeholder: "Where are you based?" %>

      <%= f.input :strava, placeholder: "Please input your Strava account if you would like to integrate your data here." %>
      <%= f.input :nike, placeholder: "Please input your Nike+ account if you would like to integrate your data here." %>

      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.input :password, autocomplete: "off", placeholder: "Leave it blank if you don't want to change your password.", required: false %>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :current_password, hint: "Please confirm your changes by inputting your current password.", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-default", onclick: "sweet();"%>
      <%= link_to "Cancel", :back, class: "btn btn-default" %>
    </div>
  <% end %>

<!-- JS for sweet alert -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.0.3/sweetalert2.all.min.js" integrity="sha256-Cc+yDzt4WAIOQNyXND0m3zCkxy8mSRJXLGy+5oGaHHM=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="app/assets/javascripts/sweetalert2.js"></script>

<!-- Cancel account -->
  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
