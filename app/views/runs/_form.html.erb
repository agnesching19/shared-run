<%= simple_form_for(@run) do |r| %>
  <%= r.input :title, placeholder: "e.g. Casual Saturday jog by the River Thames" %>
  <%= r.input :description, placeholder: "Please give a more detailed description of your run - e.g. meeting locations, points of interest, level of difficulty." %>
  <%= r.input :date %>
  <%= r.input :time %>
  <%= r.input :location, priority: ["EN"], input_html: {id: "locationInput"} %>
  <%= r.input :run_distance, placeholder: "Kilometre(s)" %>
  <%= r.input :capacity, placeholder: "Number of people" %>
  <%= r.submit "Submit", class: "btn btn-default", onclick: "sweet();" %>
<% end %>

<!-- JS for sweet alert -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.0.3/sweetalert2.all.min.js" integrity="sha256-Cc+yDzt4WAIOQNyXND0m3zCkxy8mSRJXLGy+5oGaHHM=" crossorigin="anonymous"></script>
<script type="text/javascript" src="app/assets/javascripts/sweetalert2.js"></script>

