<div class="container">
<!-- Events header -->
  <h1>UPCOMING EVENTS
    <% if user_signed_in? %>
      <%= link_to new_event_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </h1>

  <div class="row">
    <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-6">
        <div class="event-card">
          <div class="event-card-date">
            <h3><%= event.date.strftime('%a %d %b %Y') %></h3>
          </div>
          <div class="event-card-content">
            <ul class="list-inline event-icons">
              <li><i class="fa fa-clock-o" aria-hidden="true"></i> <%= event.time.strftime("%I:%M%p") %></li>
              <br>
              <li><i class="fa fa-map-marker" aria-hidden="true"></i> <%= event.location %></li>
              <li><i class="fa fa-road" aria-hidden="true"></i> <%= event.distance %>km</li>
            </ul>
            <p><%= event.description.first(50) %></p>
          </div>
          <%= link_to "", event_path(event), class: "event-card-link" %>
        </div>
      </div>
    <% end %>
  </div>

<%= content_for(:title, 'shared.run | Run Together - Anytime, Anywhere') %>
