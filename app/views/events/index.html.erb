<div class="container">
  <h1>UPCOMING EVENTS</h1>

  <div class="row">
    <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-6">
        <div class="event-card">
          <div class="event-card-date">
            <h3><%= event.date %></h3>
          </div>
          <div class="event-card-content">
            <ul class="list-inline event-icons">
              <li><i class="fa fa-clock-o" aria-hidden="true"></i> <%= event.time.strftime("at %I:%M%p") %></li>
              <br>
              <li><i class="fa fa-map-marker" aria-hidden="true"></i> <%= event.location %></li>
              <li><i class="fa fa-road" aria-hidden="true"></i> <%= event.distance %>km</li>
            </ul>
            <p><%= event.description.first(50) %></p>
          </div>
          <%= link_to "", event_path(event), class: "event-card-link" %>
        </div>
      </div>
    <% end %>
  </div>

<!-- User policy scope -->
  <p>
    <% if user_signed_in? %>
      <%= link_to "Add Event", new_event_path(@event), class: "btn btn-default" %>
      <%= link_to "Log Out", destroy_user_session_path, class: "btn btn-default" %>
    <% end %>
  </p>

</div>
