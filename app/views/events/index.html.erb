<div class="container">
  <h1>!!!Upcoming Events!!!</h1>

  <ul>
    <% @events.each do |event| %>
      <li><%= event.date %> (<%= event.distance %>km) - <%= event.description %> | <%= link_to "Show", event_path(event) %>
      </li>
    <% end %>
  </ul>

  <p>
    <% if user_signed_in? %>
      <%= link_to "Add Event", new_event_path(@event) %>
    <% end %>
  </p>

  <p>
    <%= link_to "Log Out", destroy_user_session_path %>
  </p>
</div>
