<%= simple_form_for(@event) do |e| %>
  <%= e.input :date %>
  <%= e.input :time %>
  <%= e.input :location, priority: ["EN"], input_html: {id: "locationInput"}, placeholder: "Enter a location"  %>
  <%= e.input :run_distance, placeholder: "Kilometre(s)" %>
  <%= e.input :description, placeholder: "e.g. A casual Saturday run along with local bar exploration afterwards" %>
  <%= e.input :surface, collection: [ "Grass", "Earth", "Woodland Trails", "Synthetic Track", "Sand", "Asphalt", "Treadmill", "Concrete", "Snow"], prompt: "Select"%>
  <%= e.input :price, prompt: "Â£" %>

  <%= e.submit "Submit", class: "btn btn-default" %>
<% end %>

