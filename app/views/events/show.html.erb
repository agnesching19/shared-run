<div class="results-wrapper">
  <div class="map"></div>

  <% if @search_widened %>
    <h2><%= @search_widened  %></h2>
  <% end %>

  <!-- Event details -->
  <ul class="results-display">

    <% photo_url = current_user.photo? ? current_user.photo : 'lix2bqmp4kzdpu4sqjiy' %>
      <li class="result">

        <div class="result-description">

          <h4>HOSTED BY <%= @event.user.first_name.upcase %></h4>
        </div>
        <div class="result-details">
          <p><%= @event.location.upcase.match(/^(.+?),/).to_s %> <%= @event.location.upcase.match(/,\s*([^,]+)$/).to_s.gsub(", ","") %></p>
          <p><%= @event.distance %> KM</p>
        </div>
      </li>

  </ul>

</div>

<%= link_to "Back to All Events", events_path %>

<% if policy(@event).destroy? %>
  <%= link_to "Delete", event_path(@event), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
<% end %>

<% if policy(@event).edit? %>
  <%= link_to "Edit", edit_event_path(@event), class: "btn btn-default" %>
<% end %>

<% content_for(:after_js) do %>
  <script>
    const handler = Gmaps.build("Google");
    handler.buildMap({ internal: { id: "map" } }, function() {
      markers = handler.addMarkers(<%= raw @coordinates.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
    });
  </script>
<% end %>
