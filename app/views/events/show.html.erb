<div class="container">
  <div class="row">
    <div class="col-sm-4">
      Date: <%= @event.date %> - <%= @event.time.strftime("at %I:%M%p") %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      Location: <%= @event.location %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      Distance: <%= @event.distance %> KM
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      Description: <%= @event.description %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      Price: Â£<%= @event.price %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      Surface: <%= @event.surface %>
    </div>
  </div>
</div>

<%= link_to "Back to All Events", events_path %>

<% if policy(@event).destroy? %>
  <%= link_to "Delete", event_path(@event), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
<% end %>

<% if policy(@event).edit? %>
  <%= link_to "Edit", edit_event_path(@event), class: "btn btn-default" %>
<% end %>
