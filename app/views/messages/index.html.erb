<div class="messages-container">
  <h1><%= link_to @run.title.upcase, run_path(@run) %> HOSTED BY <%= @run.user.first_name.upcase %></h1>
  <h2><%= @run.location.upcase %> | <%= @run.date.strftime("%b %d %Y").upcase %> | <%= @run.time.strftime("%l:%M %p") %></h2>

  <% @messages.each do |message| %>
    <div class="message">
      <% if message.user == current_user %>
        <div class="message-content current">
          <%= cl_image_tag message.user.photo, crop: :thumb, class: "message-avatar" %>
          <div class="message-box">
            <div class="message-body">
              <h4><%= message.content %></h4>
            </div>
          <div class="message-footer">
            <p><strong><%= message.user.first_name.capitalize %></strong> | <%= message.created_at.strftime("%d %b %Y, %l:%M %p") %></p>
          </div>
        </div>
      <% else %>
        <div class="message-content">
          <%= cl_image_tag message.user.photo, crop: :thumb, class: "message-avatar" %>
          <div class="message-box">
            <div class="message-body">
              <h4><%= message.content %></h4>
            </div>
          <div class="message-footer">
            <p><strong><%= message.user.first_name.capitalize %></strong> | <%= message.created_at.strftime("%d %b %Y, %l:%M %p") %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="message-input">
    <%= render "messages/form", run: @run, message: @message  %>
  </div>
</div>
