const newMessage = document.getElementById("new_message");
<% if @message.errors.any? %>
  newMessage.innerHTML = "<%= j render 'messages/form', run: @run, message: @message %>";
<% else %>
  const messages = document.getElementById("all-run-messages");
  messages.insertAdjacentHTML("beforeend", "<%= j render 'messages/index' %>");
  newMessage.innerHTML = "<%= j render 'messages/form', run: @run, message: Message.new %>";
<% end %>


