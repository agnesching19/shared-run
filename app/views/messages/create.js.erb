newMessage = document.getElementById("new_message");
<% if @message.errors.any? %>
  newMessage.innerHTML = "<%= j render 'messages/form', run: @run, message: @message %>";
<% else %>
  messages = document.getElementById("all-run-messages");
  messages.innerHTML = "<%= j render 'messages/container', messages: @messages %>";
  newMessage.innerHTML = "<%= j render 'messages/form', run: @run, message: Message.new %>";
<% end %>
